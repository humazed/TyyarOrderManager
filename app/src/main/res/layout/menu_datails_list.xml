<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_order_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.tyyar.tyyarordermanager.activities.OrderDetailsActivity">

    <include
        layout="@layout/item_expandable_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@id/menu_item_view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/screen_margin"
        android:background="@android:color/transparent"
        android:orientation="vertical"/>

    <include
        layout="@layout/item_expandable_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@id/menu_item_view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/screen_margin"
        android:background="@android:color/transparent"
        android:orientation="vertical"/>

    <include
        layout="@layout/item_expandable_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@id/menu_item_view"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:orientation="vertical"/>
</LinearLayout>