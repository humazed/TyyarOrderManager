<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/row_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@drawable/touch_bg"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">
<!--android:background="@color/order_card_green"-->


    <TextView
        android:id="@+id/new_order_button"
        android:layout_width="@dimen/delivery_list_item_badge_width"
        android:layout_height="@dimen/delivery_list_item_badge_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/delivery_list__item_new_marging"
        android:layout_marginRight="@dimen/delivery_list__item_new_marging"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:text="@string/word_new"
        android:textColor="@color/color_text_white"
        android:textSize="@dimen/delivery_list_item_text_size_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/new_order_button"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/delivery_list_padding_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_number_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#1001"
                android:textColor="#de000000"
                android:textSize="@dimen/delivery_list_item_text_size_large"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/customer_name_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Arthur Riley"
                android:textColor="#de000000"
                android:textSize="@dimen/delivery_list_item_text_size_large"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_items_count_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="4 Items"
                android:textColor="#ff000000"
                android:textSize="@dimen/delivery_list_item_text_size_medium"/>

            <TextView
                android:id="@+id/pickup_time_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-medium"
                android:text="Pickup @11:20AM, Today"
                android:textColor="#ff000000"
                android:textSize="@dimen/delivery_list_item_text_size_medium"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>